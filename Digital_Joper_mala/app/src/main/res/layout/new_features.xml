<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewFeaturesActivity"
    android:background="@color/color4"
    >

    <include layout="@layout/backappbar"
        android:id="@+id/toolbar"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" অ্যাপ এর মধ্যে নতুন কোনো ফিচার যুক্ত হলে এখান থেকে তা জানতে পারবেন।"
                android:textSize="20sp"
                android:textColor="@color/color10"
                android:gravity="center"
                android:textStyle="normal"
                android:padding="10dp"
                />

            <!-- dark mode features -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ১।  ডার্ক মোড এড করা হয়েছে ।"
                android:textSize="20sp"
                android:textColor="@color/color9"
                android:gravity="start"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dark_mode"
                android:background="#BDB0AC"
                />

            <!-- dark mode features -->

            <View
                android:layout_width="20dp"
                android:layout_height="30dp"/>


            <!-- share app features -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ২।  শেয়ার বাটন এড করা হয়েছে ।"
                android:textSize="20sp"
                android:textColor="@color/color9"
                android:gravity="start"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/share_pic"
                android:background="#BDB0AC"
                />

            <!-- share app features -->

        </LinearLayout>


    </ScrollView>

</RelativeLayout>