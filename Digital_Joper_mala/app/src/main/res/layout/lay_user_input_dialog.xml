<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_view_color"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="১। আপনার পছন্দের দেব-দেবীর নাম"
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:fontFamily="@font/noto_serif_bengali"
                android:padding="7dp"
                />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/atv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ems="10"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:hint="নাম......"
                android:textColorHint="@color/normal_text_color"
                android:fontFamily="@font/noto_serif_bengali"
                android:background="@drawable/sh_edit_text_design"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="50dp"
                android:layout_alignParentStart="true"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_clear_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/actionBarItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_name"
               android:layout_alignBottom="@id/atv_name"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mantra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="২। আপনার পছন্দের মন্ত্র"
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:fontFamily="@font/noto_serif_bengali"
                android:padding="7dp"
                android:layout_below="@id/atv_name"
                />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/atv_mantra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ems="10"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:hint="মন্ত্র......"
                android:textColorHint="@color/normal_text_color"
                android:fontFamily="@font/noto_serif_bengali"
                android:background="@drawable/sh_edit_text_design"
                android:layout_below="@id/tv_mantra"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="50dp"
                android:layout_alignParentStart="true"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_clear_mantra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/actionBarItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_mantra"
                android:layout_alignBottom="@id/atv_mantra"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/atv_mantra"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#ED736A"
                app:cardElevation="3dp"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বাতিল করুন"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:fontFamily="@font/noto_serif_bengali"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/atv_mantra"
               android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#67BB0A"
                app:cardElevation="3dp"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="যোগ করুন"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:fontFamily="@font/noto_serif_bengali"
                    />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>