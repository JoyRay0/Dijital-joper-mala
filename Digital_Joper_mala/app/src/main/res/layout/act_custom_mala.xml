<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Activity.Act_Custom_Mala">

    <include
        android:id="@+id/backbar"
        layout="@layout/lay_back_appbar"

        />



    <androidx.core.widget.NestedScrollView
        android:id="@+id/n_s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backbar">

        <RelativeLayout
            android:id="@+id/rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <include android:id="@+id/upload_img"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/lay_add_img"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appcompat_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/noto_serif_bengali"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="মন্ত্র:"
                android:textColor="@color/normal_text_color"
                android:textSize="17sp"
                android:textStyle="normal"
                android:layout_below="@id/upload_img"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_eye1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_below="@id/upload_img"
                android:layout_toEndOf="@id/appcompat_textview1"
                android:tag="open_eye"
                app:srcCompat="@drawable/ic_open_eye"
                android:background="?attr/actionBarItemBackground"
                />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/ed_autocomplete_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appcompat_textview1"
                android:layout_margin="10dp"
                android:background="@drawable/sh_edit_text_design"
                android:ems="10"
                android:fontFamily="@font/noto_serif_bengali"
                android:hint="জপের মন্ত্র"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/normal_text_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/save1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@id/appcompat_textview1"
                android:background="?attr/actionBarItemBackground"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/ed_autocomplete_textview1"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_pin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mantras1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_autocomplete_textview1"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/noto_serif_bengali"
                android:gravity="center"
                android:text="জপ মন্ত্র"
                android:textColor="@color/bold_text_color"
                android:textSize="19sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_delete1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_delete_mantra"
                android:layout_below="@id/ed_autocomplete_textview1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="?attr/actionBarItemBackground"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appcompat_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mantras1"
                android:layout_margin="10dp"
                android:fontFamily="@font/noto_serif_bengali"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="মন্ত্র:"
                android:textColor="@color/normal_text_color"
                android:textSize="17sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_eye2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/tv_mantras1"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/appcompat_textview1"
                android:tag="open_eye"
                app:srcCompat="@drawable/ic_open_eye"
                android:background="?attr/actionBarItemBackground"
                />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/ed_autocomplete_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appcompat_textview2"
                android:layout_margin="10dp"
                android:background="@drawable/sh_edit_text_design"
                android:ems="10"
                android:fontFamily="@font/noto_serif_bengali"
                android:hint="জপের মন্ত্র "
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/normal_text_color"

                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/save2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@id/appcompat_textview2"
                android:background="?attr/actionBarItemBackground"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/ed_autocomplete_textview2"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_pin" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mantras2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_autocomplete_textview2"
                android:layout_margin="10dp"
                android:fontFamily="@font/noto_serif_bengali"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="জপ মন্ত্র"
                android:textColor="@color/bold_text_color"
                android:textSize="19sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_delete2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_delete_mantra"
                android:layout_below="@id/ed_autocomplete_textview2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="?attr/actionBarItemBackground"
                />


            <include
                android:id="@+id/jopa"
                layout="@layout/lay_jopa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mantras2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/jopa" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>