<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00F9F6EE"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/stage1"
            android:textColor="#36454F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/pro"
            android:orientation="vertical"
            android:elevation="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/bar108"
                android:textColor="#353935"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/style"
                android:elevation="10dp"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#353935"
                android:textSize="35sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/buttonstyle"
                android:text="@string/addone"
                android:textColor="#36454F"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/less2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/lessone"
                android:textColor="#36454F"
                android:textSize="20sp"
                android:elevation="12dp"
                android:background="@drawable/buttonstyle"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reset1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/reset"
                android:textColor="#36454F"
                android:textSize="20sp"
                android:background="@drawable/buttonstyle"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stage2"
            android:textSize="20sp"
            android:textColor="#36454F"
            android:textStyle="bold"
            android:layout_margin="15dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/pro"
            android:orientation="vertical"
            android:elevation="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/bar16"
                android:textColor="#353935"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/style"
                android:elevation="10dp"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#353935"
                android:textSize="35sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/addone"
                android:textColor="#36454F"
                android:textSize="20sp"
                android:background="@drawable/buttonstyle"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/less3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/lessone"
                android:textColor="#36454F"
                android:textSize="20sp"
                android:elevation="10dp"
                android:background="@drawable/buttonstyle"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reset2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:elevation="10dp"
                android:text="@string/reset"
                android:textColor="#36454F"
                android:textSize="20sp"
                android:background="@drawable/buttonstyle"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stage3"
            android:textSize="20sp"
            android:textColor="#36454F"
            android:textStyle="bold"
            android:layout_margin="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/pro"
            android:elevation="12dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bar4"
                android:textSize="20sp"
                android:textColor="#353935"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textSize="35sp"
                android:textColor="#353935"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/style"
                android:layout_margin="15dp"
                android:elevation="10dp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addone"
                android:textSize="20sp"
                android:textColor="#36454F"
                android:layout_margin="15dp"
                android:background="@drawable/buttonstyle"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reset3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:textSize="20sp"
                android:textColor="#36454F"
                android:layout_margin="15dp"
                android:background="@drawable/buttonstyle"
                />

        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"/>


    </LinearLayout>

</ScrollView>