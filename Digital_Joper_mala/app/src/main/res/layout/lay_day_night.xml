<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_view_color"
        android:layout_margin="10dp"
        >

        <RadioGroup
            android:id="@+id/day_night_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"

            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="আপনার থিম পছন্দ করুন"
                android:fontFamily="@font/noto_serif_bengali"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bold_text_color"
                android:layout_marginBottom="10dp"
                />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/day_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="লাইট"
                android:textSize="15sp"
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/normal_text_color"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"

                />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/night_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ডার্ক"
                android:textSize="15sp"
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/normal_text_color"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"

                />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/system_default_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সিস্টেম ডিফল্ট"
                android:textSize="15sp"
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/normal_text_color"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:checked="true"
                />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mode_ok"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="ওকে"
                    android:fontFamily="@font/noto_serif_bengali"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/normal_text_color"
                    android:background="?attr/selectableItemBackground"
                    android:layout_alignParentEnd="true"
                    />




            </RelativeLayout>


        </RadioGroup>





    </androidx.cardview.widget.CardView>

</RelativeLayout>