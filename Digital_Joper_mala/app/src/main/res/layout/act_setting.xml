<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Act_Setting"
    android:background="@color/background_color"

    >

    <include layout="@layout/lay_back_appbar"
        android:id="@+id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- started-->


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/card_view_color"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!-- Feedback -->

                    <TextView
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" আমাদের মতামত জানান"
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/ic_right"
                        app:drawableStartCompat="@drawable/ic_feedback" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />

                    <!-- Feedback-->


                    <!-- new features -->


                    <TextView
                        android:id="@+id/features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" নতুন ফিচারগুলো "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/ic_right"
                        app:drawableStartCompat="@drawable/ic_new_item" />


                    <!-- new features  -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/card_view_color"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!-- more app -->

                    <!-- app theme -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mode_day_night"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_day_night"
                        android:drawablePadding="20dp"
                        android:fontFamily="@font/noto_serif_bengali"
                        android:padding="12dp"
                        android:text="অ্যাপ থিম"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:drawableEnd="@drawable/ic_right"
                        android:gravity="start"
                        android:background="?android:attr/selectableItemBackground"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />

                    <TextView
                        android:id="@+id/more_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" আমাদের অন্যান্য অ্যাপগুলো "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/ic_right"
                        app:drawableStartCompat="@drawable/ic_browser" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />


                    <!-- more app -->


                    <!-- share -->


                    <TextView
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" অ্যাপটি শেয়ার করুন "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/ic_right"
                        app:drawableStartCompat="@drawable/ic_share2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />


                    <!-- share -->


                    <!-- Rating -->


                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" আমাদের অ্যাপকে ফাইভ স্টার রেটিং দিন "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/ic_right"
                        app:drawableStartCompat="@drawable/ic_star_black" />



                    <!-- Rating -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/card_view_color"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <!-- privacy policy-->

                    <TextView
                        android:id="@+id/privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" প্রাইভেসি &amp; পলিসি"
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/ic_right"
                        app:drawableStartCompat="@drawable/ic_privacy" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />

                    <!--privacy policy -->


                    <!-- info -->


                    <TextView
                        android:id="@+id/app_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" কিছু ইনফরমেশন "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/bold_text_color"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/ic_right"
                        app:drawableStartCompat="@drawable/ic_info" />


                    <!-- info -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </ScrollView>


</RelativeLayout>