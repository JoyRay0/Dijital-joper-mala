<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity"
    android:background="@color/color4"

    >

    <include layout="@layout/backappbar"
        android:id="@+id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- started-->


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:backgroundTint="#fff"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!-- Feedback -->

                    <TextView
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" আমাদের মতামত জানান"
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/color9"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                        app:drawableStartCompat="@drawable/baseline_feedback_24" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color7"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />

                    <!-- Feedback-->


                    <!-- new features -->


                    <TextView
                        android:id="@+id/features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" নতুন ফিচারগুলো "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/color9"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                        app:drawableStartCompat="@drawable/baseline_tips_and_updates_24" />



                    <!-- new features  -->

                </LinearLayout>


            </androidx.cardview.widget.CardView>




            <!-- Dark mode

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_brightness_6_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/noto_serif_bengali"
                android:padding="12dp"
                android:text="অ্যাপ থিম"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                 />

            Dark mode-->


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:backgroundTint="#fff"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!-- more app -->


                    <TextView
                        android:id="@+id/more_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" আমাদের অন্যান্য অ্যাপগুলো "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/color9"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                        app:drawableStartCompat="@drawable/baseline_language_24" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color7"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />


                    <!-- more app -->


                    <!-- share -->


                    <TextView
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" অ্যাপটি শেয়ার করুন "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/color9"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                        app:drawableStartCompat="@drawable/baseline_share_24" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color7"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />


                    <!-- share -->


                    <!-- Rating -->


                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" আমাদের অ্যাপকে ফাইভ স্টার রেটিং দিন "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/color9"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                        app:drawableStartCompat="@drawable/baseline_star_rate_24" />



                    <!-- Rating -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:backgroundTint="#fff"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <!-- privacy policy-->

                    <TextView
                        android:id="@+id/privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" প্রাইভেসি &amp; পলিসি"
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/color9"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                        app:drawableStartCompat="@drawable/baseline_privacy_tip_24" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color7"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />

                    <!--privacy policy -->


                    <!-- info -->


                    <TextView
                        android:id="@+id/app_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusable="true"
                        android:gravity="start"
                        android:padding="12dp"
                        android:text=" কিছু ইনফরমেশন "
                        android:fontFamily="@font/noto_serif_bengali"
                        android:textColor="@color/color9"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                        app:drawableStartCompat="@drawable/baseline_info_24" />


                    <!-- info -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </ScrollView>


</RelativeLayout>