<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="@color/color4"

    >

    <include layout="@layout/backappbar"
        android:id="@+id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- started-->


            <!-- Feedback -->

            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:gravity="start"
                android:padding="12dp"
                android:text=" আমাদের মতামত জানান"
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                app:drawableStartCompat="@drawable/baseline_feedback_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7" />

            <!-- Feedback-->


            <!-- new features -->


            <TextView
                android:id="@+id/features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:gravity="start"
                android:padding="12dp"
                android:text=" নতুন ফিচারগুলো "
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                app:drawableStartCompat="@drawable/baseline_tips_and_updates_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7" />


            <!-- new features  -->


            <!-- Dark mode

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_brightness_6_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/noto_serif_bengali"
                android:padding="12dp"
                android:text="অ্যাপ থিম"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                 />

            Dark mode-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7"
                />





            <!-- more app -->


            <TextView
                android:id="@+id/more_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:gravity="start"
                android:padding="12dp"
                android:text=" আমাদের অন্যান্য অ্যাপগুলো "
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                app:drawableStartCompat="@drawable/baseline_language_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7" />


            <!-- more app -->


            <!-- share -->


            <TextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:gravity="start"
                android:padding="12dp"
                android:text=" অ্যাপটি শেয়ার করুন "
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                app:drawableStartCompat="@drawable/baseline_share_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7" />


            <!-- share -->


            <!-- Rating -->


            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:gravity="start"
                android:padding="12dp"
                android:text=" আমাদের অ্যাপকে ফাইভ স্টার রেটিং দিন "
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                app:drawableStartCompat="@drawable/baseline_star_rate_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7" />


            <!-- Rating -->



            <!-- privacy policy-->


            <TextView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:gravity="start"
                android:padding="12dp"
                android:text=" প্রাইভেসি &amp; পলিসি"
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                app:drawableStartCompat="@drawable/baseline_privacy_tip_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7" />

            <!--privacy policy -->


            <!-- info -->


            <TextView
                android:id="@+id/app_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:gravity="start"
                android:padding="12dp"
                android:text=" কিছু ইনফরমেশন "
                android:fontFamily="@font/noto_serif_bengali"
                android:textColor="@color/color9"
                android:textSize="17sp"
                android:textStyle="normal"
                app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
                app:drawableStartCompat="@drawable/baseline_info_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color7" />


            <!-- info -->


        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/bottom_nav_design"
        android:elevation="3dp"
        app:itemIconSize="25dp"
        app:itemIconTint="@color/color18"
        app:itemRippleColor="#fff"
        app:labelVisibilityMode="labeled"
        style="@style/Bottom_Navigation_Style"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>