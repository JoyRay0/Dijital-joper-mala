<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="#00F9F6EE"

    >

    <include layout="@layout/backappbar"
        android:id="@+id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- started-->




            <!-- Feedback-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text=" আমাদের মতামত জানান"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:focusable="true"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#79000000"
                />

            <!-- Feedback-->


            <!-- privacy policy-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" প্রাইভেসি &amp; পলিসি"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:padding="15dp"
                    android:drawableStart="@drawable/baseline_shield_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#79000000"
                />

            <!--privacy policy -->


            <!-- app version-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/app_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" কিছু ইনফরমেশন "
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:padding="15dp"
                    android:drawableStart="@drawable/baseline_info_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#79000000"
                />

            <!-- app version-->






        </LinearLayout>


    </ScrollView>

</RelativeLayout>